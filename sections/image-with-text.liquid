    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Top padding (desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding (desktop)",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "caption",
      "name": "Caption",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "caption",
          "label": "Caption text",
          "default": "NEW ARRIVAL"
        },
        {
          "type": "select",
          "id": "caption_style",
          "label": "Caption style",
          "options": [
            {
              "value": "filled",
              "label": "Filled"
            },
            {
              "value": "outlined",
              "label": "Outlined"
            },
            {
              "value": "plain",
              "label": "Plain text"
            }
          ],
          "default": "filled"
        }
      ]
    },
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "textarea",
          "id": "heading",
          "label": "Heading",
          "default": "Elevate your everyday"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Heading color",
