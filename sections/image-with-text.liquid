      ],
      "default": "contain"
    },
    {
      "type": "range",
      "id": "image_radius",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Image corner radius",
      "default": 48
    },
    {
      "type": "color",
      "id": "image_bg_color",
      "label": "Image background color",
      "default": "#f3f4f6"
    },
    {
      "type": "header",
