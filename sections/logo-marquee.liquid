{% comment %}
  Logo Marquee Section
  Heading text with infinitely scrolling logos
{% endcomment %}

<style>
  /* Section padding */
  #shopify-section-{{ section.id }} .logo-marquee-section {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} .logo-marquee-section {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    }
  }

  /* Marquee animation */
  @keyframes marquee-{{ section.id }} {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(calc(-100% / 3));
    }
  }

  #shopify-section-{{ section.id }} .marquee-content {
    animation: marquee-{{ section.id }} {{ section.settings.animation_speed }}s linear infinite;
    display: flex;
    will-change: transform;
  }

  #shopify-section-{{ section.id }} .marquee-wrapper:hover .marquee-content {
    animation-play-state: paused;
  }

  /* Fade edges */
  #shopify-section-{{ section.id }} .marquee-container {
    position: relative;
  }

  #shopify-section-{{ section.id }} .marquee-container::before,
  #shopify-section-{{ section.id }} .marquee-container::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100px;
    z-index: 2;
    pointer-events: none;
  }

  #shopify-section-{{ section.id }} .marquee-container::before {
    left: 0;
    background: linear-gradient(to right, {{ section.settings.background_color }}, transparent);
  }

  #shopify-section-{{ section.id }} .marquee-container::after {
    right: 0;
    background: linear-gradient(to left, {{ section.settings.background_color }}, transparent);
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    #shopify-section-{{ section.id }} .marquee-content {
      animation: none !important;
    }
  }

  /* Logo sizing */
  #shopify-section-{{ section.id }} .logo-item img {
    filter: grayscale({{ section.settings.logo_grayscale }}%);
    opacity: {{ section.settings.logo_opacity | divided_by: 100.0 }};
    transition: all 0.3s ease;
  }

  #shopify-section-{{ section.id }} .logo-item:hover img {
    filter: grayscale(0%);
    opacity: 1;
  }
</style>

<div class="logo-marquee-section full-width" style="background-color: {{ section.settings.background_color }};">

  {% comment %} Header Text - Container {% endcomment %}
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12 lg:mb-16">
      {% if section.settings.heading != blank %}
        <h2 class="text-2xl sm:text-4xl lg:text-5xl font-bold font-sans text-gray-900 mb-2 lg:mb-3">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="text-base sm:text-xl lg:text-2xl text-gray-600 font-extralight font-sans">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>
  </div>

  {% comment %} Logo Marquee - Full Width {% endcomment %}
  {% if section.blocks.size > 0 %}
    <div class="marquee-container overflow-hidden">
      <div class="marquee-wrapper">
        <div class="marquee-content items-center gap-16 lg:gap-20">

            {% comment %} Triple set of logos for seamless infinite loop {% endcomment %}
            {% for i in (1..3) %}
              {% for block in section.blocks %}
                <div class="logo-item flex-shrink-0" {% if i == 1 %}{{ block.shopify_attributes }}{% else %}aria-hidden="true"{% endif %}>
                  {% if block.settings.logo != blank %}
                    {% if block.settings.link != blank %}
                      <a href="{{ block.settings.link }}" target="_blank" rel="noopener" class="block">
                        <img
                          src="{{ block.settings.logo | image_url: width: 300 }}"
                          alt="{{ block.settings.alt_text | default: 'Logo' | escape }}"
                          class="h-6 lg:h-8 w-auto object-contain"
                          loading="lazy"
                          width="150"
                          height="32"
                        >
                      </a>
                    {% else %}
                      <img
                        src="{{ block.settings.logo | image_url: width: 300 }}"
                        alt="{{ block.settings.alt_text | default: 'Logo' | escape }}"
                        class="h-6 lg:h-8 w-auto object-contain"
                        loading="lazy"
                        width="150"
                        height="32"
                      >
                    {% endif %}
                  {% else %}
                    <div class="h-6 lg:h-8 w-24 bg-gray-200 rounded flex items-center justify-center">
                      <span class="text-xs text-gray-400">Logo</span>
                    </div>
                  {% endif %}
                </div>
              {% endfor %}
            {% endfor %}

          </div>
        </div>
      </div>
    {% endif %}

</div>

{% schema %}
{
  "name": "Logo Marquee",
  "settings": [
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
