{% comment %}
  Bento Grid Section
  Complex grid layout with image-only cards
{% endcomment %}

<style>
  /* CSS Variables */
  #shopify-section-{{ section.id }} {
    --bento-gap: {{ section.settings.grid_gap | default: 16 }}px;
    --bento-card-radius: {{ section.settings.card_radius | default: 20 }}px;
    --bento-card-padding: {{ section.settings.card_padding | default: 12 }}px;
  }

  /* Section padding and background */
  #shopify-section-{{ section.id }} .bento-grid-section {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    background: {{ section.settings.bg_color | default: '#ffffff' }};
  }

  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} .bento-grid-section {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    }
  }

  /* Heading animation */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  #shopify-section-{{ section.id }} .section-heading {
    animation: fadeInUp 0.6s ease forwards;
  }

  /* Desktop Grid Layout */
  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} .bento-grid {
      display: grid;
      grid-template-columns: 2fr 5fr;
      gap: var(--bento-gap);
    }

    /* Left column - 3 cards */
    #shopify-section-{{ section.id }} .bento-left {
      display: grid;
      grid-template-rows: 1fr 2.5fr 1.5fr;
      gap: var(--bento-gap);
    }

    /* Right column - 6 columns x 3 rows */
    #shopify-section-{{ section.id }} .bento-right {
      display: grid;
      grid-template-columns: 2.5fr repeat(6, 1fr);
      grid-template-rows: 1.5fr 1.5fr 0.45fr;
      gap: var(--bento-gap);
    }

    /* First column: 4, 10, 12 */
    #shopify-section-{{ section.id }} .feature-4 {
      grid-column: 1;
      grid-row: 1;
    }

    #shopify-section-{{ section.id }} .feature-10 {
      grid-column: 1;
      grid-row: 2;
    }

    #shopify-section-{{ section.id }} .feature-12 {
      grid-column: 1;
      grid-row: 3;
    }

    /* Row 1: 5, 6, 7 (3 equal cards, span 2 columns each) */
    #shopify-section-{{ section.id }} .feature-5 {
      grid-column: 2 / 4;
      grid-row: 1;
    }

    #shopify-section-{{ section.id }} .feature-6 {
      grid-column: 4 / 6;
      grid-row: 1;
    }

    #shopify-section-{{ section.id }} .feature-7 {
      grid-column: 6 / 8;
      grid-row: 1;
    }

    /* Row 2: 8, 9, 11 (3 equal cards, span 2 columns each) */
    #shopify-section-{{ section.id }} .feature-8 {
      grid-column: 2 / 4;
      grid-row: 2;
    }

    #shopify-section-{{ section.id }} .feature-9 {
      grid-column: 4 / 6;
      grid-row: 2;
    }

    #shopify-section-{{ section.id }} .feature-11 {
      grid-column: 6 / 8;
      grid-row: 2;
    }

    /* Row 3: 13, 14 (2 equal cards, span 3 columns each) */
    #shopify-section-{{ section.id }} .feature-13 {
      grid-column: 2 / 5;
      grid-row: 3;
    }

    #shopify-section-{{ section.id }} .feature-14 {
      grid-column: 5 / 8;
      grid-row: 3;
    }
  }

  /* Card styling */
  #shopify-section-{{ section.id }} .bento-card {
    border-radius: var(--bento-card-radius);
    padding: var(--bento-card-padding);
    background: #f9fafb;
    overflow: hidden;
  }

  /* Image styling */
  #shopify-section-{{ section.id }} .bento-card-image {
    border-radius: calc(var(--bento-card-radius) - 8px);
    overflow: hidden;
    width: 100%;
    height: 100%;
  }

  #shopify-section-{{ section.id }} .bento-card-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  /* Card animations */
  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  #shopify-section-{{ section.id }} .bento-card {
    animation: fadeInScale 0.6s ease forwards;
    opacity: 0;
  }

  {% for i in (1..14) %}
    #shopify-section-{{ section.id }} .feature-{{ i }} {
      animation-delay: {{ i | minus: 1 | times: 0.05 }}s;
    }
  {% endfor %}

  /* Custom backgrounds per block */
  {% for block in section.blocks %}
    #shopify-section-{{ section.id }} .feature-{{ forloop.index }} {
      {% if block.settings.bg_type == 'gradient' %}
        {% assign color1 = block.settings.bg_color_1 | default: '#f9fafb' %}
        {% assign color2 = block.settings.bg_color_2 | default: '#e5e7eb' %}
        {% assign direction = block.settings.gradient_direction | default: '135deg' %}
        background: linear-gradient({{ direction }}, {{ color1 }} 0%, {{ color2 }} 100%) !important;
      {% elsif block.settings.bg_type == 'solid' %}
        {% assign color1 = block.settings.bg_color_1 | default: '#f9fafb' %}
        background: {{ color1 }} !important;
      {% endif %}
    }
  {% endfor %}

  /* Card hover effect */
  #shopify-section-{{ section.id }} .bento-card {
    transition: all 0.3s ease;
  }

  #shopify-section-{{ section.id }} .bento-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    #shopify-section-{{ section.id }} .bento-card {
      animation: none !important;
      opacity: 1 !important;
      transition: none !important;
    }
  }

  /* Responsive - Mobile */
  @media (max-width: 1023px) {
    #shopify-section-{{ section.id }} .bento-grid {
      display: none;
    }

    #shopify-section-{{ section.id }} .mobile-image-wrapper {
      display: block;
    }
  }

  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} .mobile-image-wrapper {
      display: none;
    }
  }

  #shopify-section-{{ section.id }} .mobile-image-wrapper {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }

  #shopify-section-{{ section.id }} .mobile-image {
    width: 100%;
    height: auto;
    border-radius: var(--bento-card-radius);
  }
</style>

<div class="bento-grid-section full-width">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">

    {% comment %} Section Header {% endcomment %}
    {% if section.settings.heading != blank %}
      <div class="text-center mb-12 lg:mb-16">
        <h2 class="section-heading text-3xl sm:text-4xl lg:text-5xl font-medium font-sans text-gray-900">
          {{ section.settings.heading }}
        </h2>
      </div>
    {% endif %}

    {% comment %} Mobile Image - Only visible on mobile {% endcomment %}
    {% if section.settings.mobile_image != blank %}
      <div class="mobile-image-wrapper">
        <img
          src="{{ section.settings.mobile_image | image_url: width: 2000 }}"
          alt="{{ section.settings.heading | default: 'Mobile feature image' }}"
          loading="lazy"
          width="2000"
          height="1500"
          srcset="{{ section.settings.mobile_image | image_url: width: 600 }} 600w,
                  {{ section.settings.mobile_image | image_url: width: 1000 }} 1000w,
                  {{ section.settings.mobile_image | image_url: width: 1500 }} 1500w,
                  {{ section.settings.mobile_image | image_url: width: 2000 }} 2000w"
          sizes="(max-width: 767px) 100vw, 600px"
          class="mobile-image"
        >
      </div>
    {% endif %}

    {% comment %} Bento Grid - Hidden on mobile {% endcomment %}
    <div class="bento-grid">

      {% comment %} LEFT COLUMN - Features 1-3 {% endcomment %}
      <div class="bento-left">
        {% for i in (0..2) %}
          {% assign block = section.blocks[i] %}
          {% if block %}
            <div class="bento-card feature-{{ i | plus: 1 }}" {{ block.shopify_attributes }}>
              <div class="bento-card-image">
                {% if block.settings.image != blank %}
                  <img
                    src="{{ block.settings.image | image_url: width: 1600 }}"
                    alt="{{ block.settings.name | default: 'Feature' | append: ' ' | append: i | plus: 1 | escape }}"
                    loading="lazy"
                    width="1600"
                    height="1200"
                    srcset="{{ block.settings.image | image_url: width: 800 }} 800w,
                            {{ block.settings.image | image_url: width: 1200 }} 1200w,
                            {{ block.settings.image | image_url: width: 1600 }} 1600w,
                            {{ block.settings.image | image_url: width: 2000 }} 2000w"
                    sizes="(max-width: 1023px) 100vw, 25vw"
                  >
                {% else %}
                  <div class="flex items-center justify-center h-full min-h-[100px] bg-gray-100 text-gray-400 text-xs">
                    Feature {{ i | plus: 1 }}
                  </div>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      {% comment %} RIGHT COLUMN - Features 4-14 (5 columns x 3 rows) {% endcomment %}
      <div class="bento-right">
        {% for i in (3..13) %}
          {% assign block = section.blocks[i] %}
          {% if block %}
            <div class="bento-card feature-{{ i | plus: 1 }}" {{ block.shopify_attributes }}>
              <div class="bento-card-image">
                {% if block.settings.image != blank %}
                  <img
                    src="{{ block.settings.image | image_url: width: 1600 }}"
                    alt="{{ block.settings.name | default: 'Feature' | append: ' ' | append: i | plus: 1 | escape }}"
                    loading="lazy"
                    width="1600"
                    height="1200"
                    srcset="{{ block.settings.image | image_url: width: 800 }} 800w,
                            {{ block.settings.image | image_url: width: 1200 }} 1200w,
                            {{ block.settings.image | image_url: width: 1600 }} 1600w,
                            {{ block.settings.image | image_url: width: 2000 }} 2000w"
                    sizes="(max-width: 1023px) 100vw, 25vw"
                  >
                {% else %}
                  <div class="flex items-center justify-center h-full min-h-[100px] bg-gray-100 text-gray-400 text-xs">
                    Feature {{ i | plus: 1 }}
                  </div>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

    </div>

  </div>
</div>

