{% comment %}
  Split Content Section
  Two-column layout with product showcase and image
{% endcomment %}

<style>
  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  #shopify-section-{{ section.id }} .split-container {
    animation: fadeInUp 0.6s ease forwards;
    opacity: 0;
  }

  /* Section padding */
  #shopify-section-{{ section.id }} .split-content-section {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    background: #ffffff;
  }

  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} .split-content-section {
      padding-top: {{ section.settings.padding_top_desktop }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px !important;
    }
  }

  /* Colored container */
  #shopify-section-{{ section.id }} .split-container {
    background: {{ section.settings.container_bg_color | default: '#f3f4f6' }};
    border-radius: {{ section.settings.container_radius }}px;
    overflow: hidden;
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    #shopify-section-{{ section.id }} .split-container {
      animation: none !important;
      opacity: 1 !important;
    }
  }

  /* Right image scaling */
  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} .right-image {
      transform: scale(1.15);
    }
  }
</style>

<div class="split-content-section full-width">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">

    {% comment %} Mobile: Title on top {% endcomment %}
    {% if section.settings.title != blank %}
      <h2 class="lg:hidden text-2xl sm:text-3xl font-sans text-gray-900 mb-6 text-center">
        {{ section.settings.title }}
      </h2>
    {% endif %}

    {% comment %} Colored Container with Border Radius {% endcomment %}
    <div class="split-container">

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-0 lg:gap-0 lg:items-center">

        {% comment %} Left Column - Product Image, Text, Buttons {% endcomment %}
        <div class="flex flex-col items-center lg:items-center justify-center text-center lg:text-center py-12 px-6 lg:py-16 lg:px-8 order-2 lg:order-1">

          {% comment %} Title - Desktop only {% endcomment %}
          {% if section.settings.title != blank %}
            <h2 class="hidden lg:block text-2xl sm:text-3xl lg:text-4xl font-sans text-gray-900 mb-4 lg:mb-6">
              {{ section.settings.title }}
            </h2>
          {% endif %}

          {% comment %} Product Image {% endcomment %}
          {% if section.settings.left_image != blank %}
            <div class="mb-6 lg:mb-10 w-full max-w-sm">
              <img
                src="{{ section.settings.left_image | image_url: width: 800 }}"
                alt="{{ section.settings.left_image.alt | escape }}"
                width="{{ section.settings.left_image.width }}"
                height="{{ section.settings.left_image.height }}"
                loading="lazy"
                class="w-full h-auto object-contain mx-auto"
              >
            </div>
          {% endif %}

          {% comment %} Description {% endcomment %}
          {% if section.settings.description != blank %}
            <p class="text-sm sm:text-base lg:text-lg font-sans text-gray-700 mb-6 lg:mb-8 max-w-md">
              {{ section.settings.description }}
            </p>
          {% endif %}

          {% comment %} Buttons {% endcomment %}
          <div class="flex flex-col gap-3 w-full max-w-sm">
            {% if section.settings.primary_button_text != blank %}
              {% if section.settings.modal_product != blank %}
                {% assign clean_id = section.id | replace: '__', '_' | replace: '-', '_' %}
                <button
                  type="button"
                  onclick="openProductModal_{{ clean_id }}()"
                  class="px-6 py-3 lg:px-8 lg:py-3.5 bg-black text-white text-sm lg:text-base font-sans rounded-full hover:bg-gray-800 transition-all duration-300 text-center"
                >
                  {{ section.settings.primary_button_text }}
                </button>
              {% else %}
                <a
                  href="{{ section.settings.primary_button_link | default: '#' }}"
                  class="px-6 py-3 lg:px-8 lg:py-3.5 bg-black text-white text-sm lg:text-base font-sans rounded-full hover:bg-gray-800 transition-all duration-300 text-center"
                >
                  {{ section.settings.primary_button_text }}
                </a>
              {% endif %}
            {% endif %}

            {% if section.settings.secondary_button_text != blank %}
              <a
                href="{{ section.settings.secondary_button_link | default: '#' }}"
                class="px-6 py-3 lg:px-8 lg:py-3.5 bg-white text-black text-sm lg:text-base font-sans border-2 border-black rounded-full hover:bg-gray-50 transition-all duration-300 text-center"
              >
                {{ section.settings.secondary_button_text }}
              </a>
            {% endif %}

            {% if section.settings.tertiary_button_text != blank %}
              <a
                href="{{ section.settings.tertiary_button_link | default: '#' }}"
                class="px-6 py-3 lg:px-8 lg:py-3.5 bg-white text-black text-sm lg:text-base font-sans border-2 border-black rounded-full hover:bg-gray-50 transition-all duration-300 text-center"
              >
                {{ section.settings.tertiary_button_text }}
              </a>
            {% endif %}
          </div>

        </div>

        {% comment %} Right Column - Feature Image Only {% endcomment %}
        <div class="flex items-center justify-center px-6 lg:px-0 py-8 lg:py-0 order-1 lg:order-2">
          {% if section.settings.right_image != blank %}
            <div class="w-full max-w-md lg:max-w-none">
              <img
                src="{{ section.settings.right_image | image_url: width: 1200 }}"
                alt="{{ section.settings.right_image.alt | escape }}"
                width="{{ section.settings.right_image.width }}"
                height="{{ section.settings.right_image.height }}"
                loading="lazy"
                class="right-image w-full h-auto object-contain mx-auto"
              >
            </div>
          {% endif %}
        </div>

      </div>

    </div>

  </div>
</div>

{% comment %} Product Quick View Modal {% endcomment %}
{% if section.settings.modal_product != blank %}
  {% assign modal_product = section.settings.modal_product %}
  {% assign clean_id = section.id | replace: '__', '_' | replace: '-', '_' %}

  <div id="product-modal-{{ clean_id }}" class="product-modal-overlay" style="display: none;">
    <div class="product-modal-container">

      {% comment %} Close Button {% endcomment %}
      <button type="button" class="modal-close-btn" onclick="closeProductModal_{{ clean_id }}()" aria-label="Close">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 6L6 18M6 6l12 12"/>
        </svg>
      </button>

      <div class="modal-grid">

        {% comment %} Left - Product Image {% endcomment %}
        <div class="modal-image-section">
          {% if modal_product.featured_image %}
            <img
              src="{{ modal_product.featured_image | image_url: width: 800 }}"
              alt="{{ modal_product.featured_image.alt | escape }}"
              class="modal-product-image"
              loading="lazy"
            >
          {% endif %}
        </div>

        {% comment %} Right - Product Info {% endcomment %}
        <div class="modal-info-section">

          {% comment %} Title {% endcomment %}
          <h2 class="modal-product-title">{{ modal_product.title }}</h2>

          {% comment %} Subtitle/Description {% endcomment %}
          {% if modal_product.metafields.custom.subtitle %}
            <p class="modal-product-subtitle">{{ modal_product.metafields.custom.subtitle }}</p>
          {% endif %}

          {% comment %} Reviews/Rating (Judge.me or metafield) {% endcomment %}
          <div class="modal-rating">
            <div class="flex items-center gap-2 mb-4">
              <div class="flex gap-0.5">
                {% for i in (1..5) %}
                  <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 20 20">
                    <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                  </svg>
                {% endfor %}
              </div>
              <span class="text-sm text-gray-600">728 Reviews</span>
            </div>
          </div>

          {% comment %} Price {% endcomment %}
          <div class="modal-price-section mb-6">
            {% assign current_variant = modal_product.selected_or_first_available_variant %}
            {% if current_variant.compare_at_price and current_variant.compare_at_price > current_variant.price %}
              <span class="modal-compare-price">${{ current_variant.compare_at_price | money_without_currency }}</span>
            {% endif %}
            <span class="modal-current-price">${{ current_variant.price | money_without_currency }}</span>
            {% if current_variant.compare_at_price and current_variant.compare_at_price > current_variant.price %}
              {% assign savings = current_variant.compare_at_price | minus: current_variant.price %}
              <span class="modal-savings-badge">SAVE +${{ savings | money_without_currency }}</span>
            {% endif %}
          </div>

          {% comment %} Features/Description {% endcomment %}
          <div class="modal-features mb-6">
            {% if modal_product.description != blank %}
              <div class="prose prose-sm max-w-none">
                {{ modal_product.description }}
              </div>
            {% endif %}
          </div>

          {% comment %} Divider {% endcomment %}
          <div class="modal-divider"></div>

          {% comment %} Rapi Widget {% endcomment %}
          <div class="modal-rapi-widget mb-6">
            <div data-rapi-id="rapi_637b5824d189e0"></div>
          </div>

          {% comment %} Add to Cart Form {% endcomment %}
          {% form 'product', modal_product, class: 'modal-product-form' %}
            <input type="hidden" name="id" value="{{ modal_product.selected_or_first_available_variant.id }}">

            {% comment %} Variant Selector (if product has variants) {% endcomment %}
            {% if modal_product.variants.size > 1 %}
              <div class="mb-4">
                <label class="block text-sm mb-2">Select Variant</label>
                <select name="id" class="w-full px-4 py-3 border border-gray-300 rounded-full">
                  {% for variant in modal_product.variants %}
                    <option value="{{ variant.id }}" {% if variant == modal_product.selected_or_first_available_variant %}selected{% endif %}>
                      {{ variant.title }} - ${{ variant.price | money_without_currency }}
                    </option>
                  {% endfor %}
                </select>
              </div>
            {% endif %}

            {% comment %} Buttons Grid {% endcomment %}
            <div class="flex flex-col gap-3">
              {% comment %} Add to Cart + Shop Pay Row {% endcomment %}
              <div class="grid grid-cols-2 gap-3">
                <button
                  type="submit"
                  name="add"
                  class="px-6 py-3.5 bg-black text-white rounded-full hover:bg-gray-800 transition-all duration-300 text-center text-sm lg:text-base"
                >
                  Add to Cart
                </button>

                {% comment %} Shop Pay Button {% endcomment %}
                {{ form | payment_button }}
              </div>

              {% comment %} View Full Details Button {% endcomment %}
              <a
                href="{{ modal_product.url }}"
                class="w-full px-6 py-3.5 bg-white text-black border-2 border-black rounded-full hover:bg-gray-50 transition-all duration-300 text-center text-sm lg:text-base"
              >
                View Full Details
              </a>
            </div>
          {% endform %}

        </div>

      </div>

    </div>
  </div>

  <style>
    /* Product Modal Styles */
    #product-modal-{{ clean_id }}.product-modal-overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      z-index: 9999;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    #product-modal-{{ clean_id }}.product-modal-overlay.active {
      opacity: 1;
    }

    #product-modal-{{ clean_id }} .product-modal-container {
      background: white;
      border-radius: 2rem;
      max-width: 1200px;
      width: 100%;
      height: 700px;
      max-height: 90vh;
      overflow: hidden;
      position: relative;
      transform: scale(0.9);
      transition: transform 0.3s ease;
    }

    #product-modal-{{ clean_id }}.active .product-modal-container {
      transform: scale(1);
    }

    #product-modal-{{ clean_id }} .modal-close-btn {
      position: absolute;
      top: 1.5rem;
      right: 1.5rem;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: white;
      border: 1px solid #e5e7eb;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      z-index: 10;
      transition: all 0.2s;
    }

    #product-modal-{{ clean_id }} .modal-close-btn:hover {
      background: #f3f4f6;
      transform: rotate(90deg);
    }

    #product-modal-{{ clean_id }} .modal-grid {
      display: grid;
      grid-template-columns: 1fr;
      height: 100%;
    }

    @media (min-width: 768px) {
      #product-modal-{{ clean_id }} .modal-grid {
        grid-template-columns: 1fr 1fr;
      }
    }

    #product-modal-{{ clean_id }} .modal-image-section {
      padding: 3rem;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #f9fafb;
      position: sticky;
      top: 0;
      height: 100%;
      overflow: hidden;
    }

    #product-modal-{{ clean_id }} .modal-product-image {
      width: 100%;
      height: auto;
      object-fit: contain;
      max-height: 450px;
    }

    #product-modal-{{ clean_id }} .modal-info-section {
      padding: 3rem;
      overflow-y: auto;
      height: 100%;
    }

    /* Custom scrollbar for modal content */
    #product-modal-{{ clean_id }} .modal-info-section::-webkit-scrollbar {
      width: 8px;
    }

    #product-modal-{{ clean_id }} .modal-info-section::-webkit-scrollbar-track {
      background: #f3f4f6;
      border-radius: 4px;
    }

    #product-modal-{{ clean_id }} .modal-info-section::-webkit-scrollbar-thumb {
      background: #d1d5db;
      border-radius: 4px;
    }

    #product-modal-{{ clean_id }} .modal-info-section::-webkit-scrollbar-thumb:hover {
      background: #9ca3af;
    }

    #product-modal-{{ clean_id }} .modal-product-title {
      font-size: 2rem;
      margin-bottom: 0.5rem;
    }

    #product-modal-{{ clean_id }} .modal-product-subtitle {
      font-size: 1.125rem;
      color: #6b7280;
      margin-bottom: 1rem;
    }

    #product-modal-{{ clean_id }} .modal-price-section {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      flex-wrap: wrap;
    }

    #product-modal-{{ clean_id }} .modal-compare-price {
      font-size: 1.25rem;
      color: #9ca3af;
      text-decoration: line-through;
    }

    #product-modal-{{ clean_id }} .modal-current-price {
      font-size: 1.875rem;
    }

    #product-modal-{{ clean_id }} .modal-savings-badge {
      font-size: 0.875rem;
      padding: 0.25rem 0.75rem;
      background: #dcfce7;
      color: #166534;
      border-radius: 9999px;
    }

    #product-modal-{{ clean_id }} .modal-features {
      color: #374151;
      line-height: 1.75;
    }

    #product-modal-{{ clean_id }} .modal-features ul {
      list-style: none;
      padding: 0;
    }

    #product-modal-{{ clean_id }} .modal-features li {
      padding-left: 1.5rem;
      position: relative;
      margin-bottom: 0.75rem;
    }

    #product-modal-{{ clean_id }} .modal-features li::before {
      content: "â€¢";
      position: absolute;
      left: 0;
      color: #000;
    }

    /* Divider */
    #product-modal-{{ clean_id }} .modal-divider {
      width: 100%;
      height: 1px;
      background: #e5e7eb;
      margin: 2rem 0;
    }

    /* Rapi Widget */
    #product-modal-{{ clean_id }} .modal-rapi-widget {
      min-height: 40px;
    }

    /* Payment Button Styling */
    #product-modal-{{ clean_id }} .shopify-payment-button {
      margin: 0;
    }

    #product-modal-{{ clean_id }} .shopify-payment-button__button {
      border-radius: 9999px !important;
      border: 2px solid #000 !important;
      background: white !important;
      min-height: 48px !important;
      transition: all 0.3s !important;
    }

    #product-modal-{{ clean_id }} .shopify-payment-button__button:hover {
      background: #f9fafb !important;
    }

    #product-modal-{{ clean_id }} .shopify-payment-button__button--unbranded {
      background: white !important;
      color: #000 !important;
    }

    #product-modal-{{ clean_id }} .shopify-payment-button__more-options {
      margin-top: 0.5rem;
      text-align: center;
      font-size: 0.875rem;
    }

    @media (max-width: 767px) {
      #product-modal-{{ clean_id }} .product-modal-container {
        height: 90vh;
      }

      #product-modal-{{ clean_id }} .modal-grid {
        grid-template-columns: 1fr;
        grid-template-rows: auto 1fr;
        overflow: hidden;
      }

      #product-modal-{{ clean_id }} .modal-image-section {
        padding: 1.5rem;
        height: auto;
        position: relative;
      }

      #product-modal-{{ clean_id }} .modal-info-section {
        padding: 1.5rem;
      }

      #product-modal-{{ clean_id }} .modal-product-title {
        font-size: 1.5rem;
      }

      #product-modal-{{ clean_id }} .modal-current-price {
        font-size: 1.5rem;
      }

      #product-modal-{{ clean_id }} .modal-product-image {
        max-height: 250px;
      }
    }
  </style>

  <script>
    function openProductModal_{{ clean_id }}() {
      const modal = document.getElementById('product-modal-{{ clean_id }}');
      if (modal) {
        modal.style.display = 'flex';
        document.body.style.overflow = 'hidden';

        // Trigger animation
        setTimeout(() => {
          modal.classList.add('active');
        }, 10);
      }
    }

    function closeProductModal_{{ clean_id }}() {
      const modal = document.getElementById('product-modal-{{ clean_id }}');
      if (modal) {
        modal.classList.remove('active');

        setTimeout(() => {
          modal.style.display = 'none';
          document.body.style.overflow = '';
        }, 300);
      }
    }

    // Close on overlay click
    document.addEventListener('DOMContentLoaded', function() {
      const modal = document.getElementById('product-modal-{{ clean_id }}');
      if (modal) {
        modal.addEventListener('click', function(e) {
          if (e.target === this) {
            closeProductModal_{{ clean_id }}();
          }
        });
      }
    });

    // Close on Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeProductModal_{{ clean_id }}();
      }
    });
  </script>
{% endif %}

