{% comment %}
  FAQ Section
  Accordion-style frequently asked questions
{% endcomment %}

<style>
  /* FAQ Accordion Animation - Ultra Smooth Grid-Based */
  #shopify-section-{{ section.id }} .faq-content {
    display: grid !important;
    grid-template-rows: 0fr !important;
    transition: grid-template-rows 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0 !important;
  }

  #shopify-section-{{ section.id }} details.is-active .faq-content {
    grid-template-rows: 1fr !important;
    opacity: 1 !important;
  }

  #shopify-section-{{ section.id }} .faq-content > div {
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} details.is-active .chevron {
    transform: rotate(180deg) !important;
  }

  #shopify-section-{{ section.id }} .chevron {
    transition: transform 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: transform;
    transform: rotate(0deg);
  }

  #shopify-section-{{ section.id }} details {
    display: block !important;
  }

  #shopify-section-{{ section.id }} details summary {
    display: flex !important;
    user-select: none;
    -webkit-user-select: none;
    transition: opacity 0.25s ease;
  }

  #shopify-section-{{ section.id }} details summary::-webkit-details-marker {
    display: none;
  }

  #shopify-section-{{ section.id }} details summary::marker {
    display: none;
  }

  #shopify-section-{{ section.id }} details summary:hover {
    opacity: 0.7;
  }

  #shopify-section-{{ section.id }} details .faq-content {
    display: grid !important;
    width: 100% !important;
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    #shopify-section-{{ section.id }} .faq-content,
    #shopify-section-{{ section.id }} .chevron {
      transition-duration: 0.01ms !important;
    }
  }
</style>

<section class="full-width bg-gray-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-20">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16">

      {% comment %} Left Column - Heading & Button {% endcomment %}
      <div class="lg:col-span-4">
        <h2 class="text-4xl lg:text-5xl font-medium font-sans text-gray-900 mb-6 lg:mb-8">
          {{ section.settings.heading | default: 'Frequently Asked Questions' }}
        </h2>

        {% if section.settings.button_text != blank %}
          <a
            href="{{ section.settings.button_link | default: '#' }}"
            class="inline-flex items-center px-6 py-3 border-2 border-gray-900 text-gray-900 font-semibold text-base font-sans rounded-full hover:bg-gray-900 hover:text-white transition-all duration-300"
          >
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>

      {% comment %} Right Column - FAQ Items {% endcomment %}
      <div class="lg:col-span-8 space-y-4">
        {% for block in section.blocks %}
          {% if block.type == 'faq_item' %}
            <div class="bg-white rounded-2xl shadow-sm" {{ block.shopify_attributes }}>
              <details class="group" {% if block.settings.open_by_default %}open{% endif %} data-faq-item>
                <summary class="flex justify-between items-start cursor-pointer list-none px-6 py-6 w-full">
                  <span class="text-lg lg:text-xl font-semibold font-sans text-gray-900 pr-4 flex-1">
                    {{ block.settings.question }}
                  </span>
                  <svg class="w-6 h-6 text-gray-600 chevron flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                  </svg>
                </summary>
                <div class="faq-content">
                  <div>
                    <div class="px-6 pb-6 text-base text-gray-600 font-sans leading-relaxed">
                      {{ block.settings.answer }}
                    </div>
                  </div>
                </div>
              </details>
            </div>
          {% endif %}
        {% endfor %}
      </div>

    </div>
  </div>
</section>

<script>
  // Ultra smooth grid-based FAQ animation - no height calculations needed!
  (function() {
    const faqItems = document.querySelectorAll('#shopify-section-{{ section.id }} details[data-faq-item]');

    faqItems.forEach(details => {
      const summary = details.querySelector('summary');
      if (!summary) return;

      // Force details to always be "open" in DOM, but control visibility with CSS
      const wasOpenByDefault = details.hasAttribute('open');
      details.setAttribute('open', '');

      // Initialize state - add is-active class if open by default
      if (wasOpenByDefault) {
        details.classList.add('is-active');
      }

      // Simple class toggle - CSS grid handles the smooth animation
      summary.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        details.classList.toggle('is-active');
      }, true); // Capture phase

      // Keyboard accessibility
      summary.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          e.stopPropagation();
          details.classList.toggle('is-active');
        }
      });
    });
  })();
</script>

