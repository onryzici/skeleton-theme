{% comment %}
  Pricing Comparison Section
  Grid-based layout with perfect alignment
{% endcomment %}

<style>
  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  #shopify-section-{{ section.id }} .pricing-header {
    animation: fadeInUp 0.6s ease forwards;
    opacity: 0;
  }

  #shopify-section-{{ section.id }} .pricing-content {
    animation: fadeInUp 0.6s ease forwards 0.2s;
    opacity: 0;
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    #shopify-section-{{ section.id }} .pricing-header,
    #shopify-section-{{ section.id }} .pricing-content {
      animation: none !important;
      opacity: 1 !important;
    }
  }

  /* Section padding */
  #shopify-section-{{ section.id }} .pricing-section {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} .pricing-section {
      padding-top: {{ section.settings.padding_top_desktop }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px !important;
    }
  }

  /* Plan column styling */
  #shopify-section-{{ section.id }} .plan-header {
    border: 1px solid rgb(209 213 219);
    border-bottom: none;
    border-radius: 2rem 2rem 0 0;
    padding: 1rem 0.5rem 0.25rem;
  }

  #shopify-section-{{ section.id }} .plan-cell {
    border-left: 1px solid rgb(209 213 219);
    border-right: 1px solid rgb(209 213 219);
    padding: 1.25rem 0.75rem;
  }

  #shopify-section-{{ section.id }} .plan-cell-last {
    border: 1px solid rgb(209 213 219);
    border-top: none;
    border-radius: 0 0 2rem 2rem;
    padding: 1.25rem 0.75rem 1.5rem;
  }
</style>

<div class="pricing-section full-width bg-white">

  {% comment %} Section Header {% endcomment %}
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="pricing-header text-center mb-12 lg:mb-16">
      {% if section.settings.title != blank %}
        <h2 class="text-2xl sm:text-3xl lg:text-5xl font-bold font-sans text-gray-900 mb-4 lg:mb-6">
          {{ section.settings.title }}
        </h2>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <p class="text-sm sm:text-base lg:text-xl text-gray-600 font-extralight font-sans max-w-4xl mx-auto">
          {{ section.settings.subtitle }}
        </p>
      {% endif %}
    </div>
  </div>

  {% comment %} Pricing Comparison Content {% endcomment %}
  <div class="pricing-content max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="border border-gray-300 rounded-[2.5rem] p-8 lg:p-12">

      {%- assign plan_titles = section.settings.plan_titles | split: '|' -%}

      <div class="flex gap-8 lg:gap-12 items-center">

        {% comment %} Image - separate from grid {% endcomment %}
        <div class="flex-shrink-0 w-[300px] lg:w-[400px] flex items-center justify-center">
          {% if section.settings.left_image != blank %}
            <img
              src="{{ section.settings.left_image | image_url: width: 600 }}"
              alt="{{ section.settings.title | escape }}"
              class="w-full h-auto object-contain"
              loading="lazy"
              width="300"
              height="300"
            >
          {% else %}
            {{ 'product-1' | placeholder_svg_tag: 'w-full h-auto text-gray-300' }}
          {% endif %}
        </div>

        {% comment %} Grid for table - without image column {% endcomment %}
        <div class="flex-1 grid grid-cols-[200px_1fr_1fr_1fr] gap-x-4 lg:gap-x-6">

          {% comment %} Empty cell for col 1 header {% endcomment %}
          <div style="grid-row: 1; grid-column: 1;"></div>

        {% comment %} Plan Headers - Col 2, 3, 4 {% endcomment %}
        {% for i in (0..2) %}
          <div class="plan-header text-center flex items-center justify-center" style="grid-row: 1; grid-column: {{ i | plus: 2 }};">
            <span class="inline-block px-6 lg:px-8 py-2 lg:py-3 rounded-full text-xs lg:text-base font-semibold font-sans
              {% if i == 0 %}text-green-700
              {% elsif i == 1 %}text-gray-900
              {% else %}text-purple-700{% endif %}"
              style="{% if i == 0 %}background: linear-gradient(135deg, #d1fae5 0%, #ecfdf5 100%);
              {% elsif i == 1 %}background: linear-gradient(135deg, #e5e7eb 0%, #f9fafb 100%);
              {% else %}background: linear-gradient(135deg, #e9d5ff 0%, #f3e8ff 100%);{% endif %}">
              {{ plan_titles[i] | default: 'Plan' }}
            </span>
          </div>
        {% endfor %}

        {% comment %} Feature Rows {% endcomment %}
        {% for block in section.blocks %}
          {%- assign row_number = forloop.index | plus: 1 -%}
          {%- assign is_last = forloop.last -%}

          {% comment %} Feature name - Col 1 {% endcomment %}
          <div class="flex items-center py-5" style="grid-row: {{ row_number }}; grid-column: 1;">
            <span class="text-xs lg:text-base font-extralight font-sans text-gray-900">{{ block.settings.c2 }}</span>
          </div>

          {% comment %} Plan 1 value - Col 2 {% endcomment %}
          <div class="{% if is_last %}plan-cell-last{% else %}plan-cell{% endif %} flex items-center justify-center text-center" style="grid-row: {{ row_number }}; grid-column: 2;">
            {% if block.settings.p1_check %}
              <svg class="w-7 h-7 lg:w-8 lg:h-8 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            {% elsif block.settings.c3 != blank %}
              <span class="text-xs lg:text-base font-bold font-sans {{ block.settings.c3_color }}">{{ block.settings.c3 }}</span>
            {% else %}
              <span class="text-gray-300 text-lg lg:text-xl">—</span>
            {% endif %}
          </div>

          {% comment %} Plan 2 value - Col 3 {% endcomment %}
          <div class="{% if is_last %}plan-cell-last{% else %}plan-cell{% endif %} flex items-center justify-center text-center" style="grid-row: {{ row_number }}; grid-column: 3;">
            {% if block.settings.p2_check %}
              <svg class="w-7 h-7 lg:w-8 lg:h-8 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            {% elsif block.settings.c4 != blank %}
              <span class="text-xs lg:text-base font-bold font-sans {{ block.settings.c4_color }}">{{ block.settings.c4 }}</span>
            {% else %}
              <span class="text-gray-300 text-lg lg:text-xl">—</span>
            {% endif %}
          </div>

          {% comment %} Plan 3 value - Col 4 {% endcomment %}
          <div class="{% if is_last %}plan-cell-last{% else %}plan-cell{% endif %} flex items-center justify-center text-center" style="grid-row: {{ row_number }}; grid-column: 4;">
            {% if block.settings.p3_check %}
              <svg class="w-7 h-7 lg:w-8 lg:h-8 text-purple-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            {% elsif block.settings.c5 != blank %}
              <span class="text-xs lg:text-base font-bold font-sans {{ block.settings.c5_color }}">{{ block.settings.c5 }}</span>
            {% else %}
              <span class="text-gray-300 text-lg lg:text-xl">—</span>
            {% endif %}
          </div>

        {% endfor %}

        </div>

      </div>

    </div>
  </div>
</div>

