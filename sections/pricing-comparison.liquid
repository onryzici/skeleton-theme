{% comment %}
  Pricing Comparison Section
  Compare subscription plans with features in a clean table layout
{% endcomment %}

<style>
  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  #shopify-section-{{ section.id }} .pricing-header {
    animation: fadeInUp 0.6s ease forwards;
    opacity: 0;
  }

  #shopify-section-{{ section.id }} .pricing-content {
    animation: fadeInUp 0.6s ease forwards 0.2s;
    opacity: 0;
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    #shopify-section-{{ section.id }} .pricing-header,
    #shopify-section-{{ section.id }} .pricing-content {
      animation: none !important;
      opacity: 1 !important;
    }
  }

  /* Section padding */
  #shopify-section-{{ section.id }} .pricing-section {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} .pricing-section {
      padding-top: {{ section.settings.padding_top_desktop }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px !important;
    }
  }
</style>

<section class="pricing-section {% if section.settings.background_color == 'gray' %}bg-gray-50{% else %}bg-white{% endif %}">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">

    {% comment %} Section Header {% endcomment %}
    <div class="pricing-header text-center mb-12 lg:mb-16">
      {% if section.settings.heading != blank %}
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-medium font-sans text-gray-900 mb-4 lg:mb-6">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="text-base sm:text-lg lg:text-xl text-gray-600 font-sans max-w-4xl mx-auto">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>

    {% comment %} Pricing Comparison Content {% endcomment %}
    <div class="pricing-content bg-white rounded-3xl lg:rounded-[2.5rem] shadow-sm border border-gray-100 p-6 lg:p-12">
      <div class="grid grid-cols-1 lg:grid-cols-[400px_1fr] gap-8 lg:gap-12 xl:gap-16">

        {% comment %} Left Side - Product Image {% endcomment %}
        <div class="flex items-center justify-center lg:justify-start">
          {% if section.settings.product_image != blank %}
            <img
              src="{{ section.settings.product_image | image_url: width: 800 }}"
              alt="{{ section.settings.heading | escape }}"
              class="w-full max-w-[320px] lg:max-w-none h-auto object-contain"
              loading="lazy"
              width="400"
              height="400"
            >
          {% else %}
            {{ 'product-1' | placeholder_svg_tag: 'w-full max-w-[320px] lg:max-w-none h-auto text-gray-300' }}
          {% endif %}
        </div>

        {% comment %} Right Side - Plans Comparison {% endcomment %}
        <div class="overflow-x-auto">
          <div class="min-w-[600px]">

            {% comment %} Plan Headers {% endcomment %}
            <div class="grid grid-cols-[200px_repeat(3,1fr)] gap-4 mb-8">
              <div></div> {% comment %} Empty cell for features column {% endcomment %}

              {% for block in section.blocks %}
                {% if block.type == 'plan' %}
                  <div class="text-center" {{ block.shopify_attributes }}>
                    {% comment %} Plan Badge {% endcomment %}
                    <div class="inline-block px-6 py-2 rounded-full mb-4 font-semibold font-sans text-sm lg:text-base
                      {% if block.settings.badge_style == 'green' %}
                        bg-green-100 text-green-700
                      {% elsif block.settings.badge_style == 'purple' %}
                        bg-purple-100 text-purple-700
                      {% else %}
                        bg-gray-100 text-gray-700
                      {% endif %}">
                      {{ block.settings.plan_name }}
                    </div>

                    {% comment %} Price {% endcomment %}
                    <div class="text-2xl lg:text-3xl font-bold font-sans text-gray-900 mb-6">
                      {% if block.settings.price == '0' or block.settings.price == 'Free' %}
                        Free
                      {% else %}
                        {{ block.settings.price }}
                      {% endif %}
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>

            {% comment %} Features Comparison Rows {% endcomment %}
            <div class="space-y-6">
              {% for feature_block in section.blocks %}
                {% if feature_block.type == 'feature' %}
                  <div class="grid grid-cols-[200px_repeat(3,1fr)] gap-4 items-center py-4 border-t border-gray-100" {{ feature_block.shopify_attributes }}>

                    {% comment %} Feature Name {% endcomment %}
                    <div class="text-sm lg:text-base font-medium font-sans text-gray-900">
                      {{ feature_block.settings.feature_name }}
                    </div>

                    {% comment %} Plan 1 Value {% endcomment %}
                    <div class="text-center">
                      {% if feature_block.settings.plan1_value == 'check' %}
                        <svg class="w-6 h-6 mx-auto text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                      {% elsif feature_block.settings.plan1_value == 'none' %}
                        <span class="text-gray-300">—</span>
                      {% else %}
                        <span class="text-xs lg:text-sm text-gray-600 font-sans">{{ feature_block.settings.plan1_value }}</span>
                      {% endif %}
                    </div>

                    {% comment %} Plan 2 Value {% endcomment %}
                    <div class="text-center">
                      {% if feature_block.settings.plan2_value == 'check' %}
                        <svg class="w-6 h-6 mx-auto text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                      {% elsif feature_block.settings.plan2_value == 'none' %}
                        <span class="text-gray-300">—</span>
                      {% else %}
                        <span class="text-xs lg:text-sm text-gray-600 font-sans">{{ feature_block.settings.plan2_value }}</span>
                      {% endif %}
                    </div>

                    {% comment %} Plan 3 Value {% endcomment %}
                    <div class="text-center">
                      {% if feature_block.settings.plan3_value == 'check' %}
                        <svg class="w-6 h-6 mx-auto text-purple-500" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                      {% elsif feature_block.settings.plan3_value == 'none' %}
                        <span class="text-gray-300">—</span>
                      {% else %}
                        <span class="text-xs lg:text-sm text-gray-600 font-sans">{{ feature_block.settings.plan3_value }}</span>
                      {% endif %}
                    </div>

                  </div>
                {% endif %}
              {% endfor %}
            </div>

          </div>
        </div>

      </div>
    </div>

  </div>
</section>

