{% comment %}
  Pricing Comparison Section
  Clean grid-based layout with perfect alignment
{% endcomment %}

<style>
  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  #shopify-section-{{ section.id }} .pricing-header {
    animation: fadeInUp 0.6s ease forwards;
    opacity: 0;
  }

  #shopify-section-{{ section.id }} .pricing-content {
    animation: fadeInUp 0.6s ease forwards 0.2s;
    opacity: 0;
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    #shopify-section-{{ section.id }} .pricing-header,
    #shopify-section-{{ section.id }} .pricing-content {
      animation: none !important;
      opacity: 1 !important;
    }
  }

  /* Section padding */
  #shopify-section-{{ section.id }} .pricing-section {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} .pricing-section {
      padding-top: {{ section.settings.padding_top_desktop }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px !important;
    }
  }

  /* Plan column borders */
  #shopify-section-{{ section.id }} .plan-header {
    border: 1px solid rgb(17 24 39 / 0.7);
    border-bottom: none;
    border-radius: 2rem 2rem 0 0;
    padding: 0.75rem;
  }

  #shopify-section-{{ section.id }} .plan-cell {
    border-left: 1px solid rgb(17 24 39 / 0.7);
    border-right: 1px solid rgb(17 24 39 / 0.7);
    padding: 0.75rem;
  }

  #shopify-section-{{ section.id }} .plan-cell-last {
    border: 1px solid rgb(17 24 39 / 0.7);
    border-top: none;
    border-radius: 0 0 2rem 2rem;
    padding: 0.75rem;
    padding-bottom: 1rem;
  }
</style>

<div class="pricing-section full-width bg-white">

  {% comment %} Section Header {% endcomment %}
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="pricing-header text-center mb-12 lg:mb-16">
      {% if section.settings.title != blank %}
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-medium font-sans text-gray-900 mb-4 lg:mb-6">
          {{ section.settings.title }}
        </h2>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <p class="text-base sm:text-lg lg:text-xl text-gray-600 font-sans max-w-4xl mx-auto">
          {{ section.settings.subtitle }}
        </p>
      {% endif %}
    </div>
  </div>

  {% comment %} Pricing Comparison Content {% endcomment %}
  <div class="pricing-content max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="border border-gray-900/50 rounded-[2.5rem] p-8 lg:p-12">

      {%- assign plan_titles = section.settings.plan_titles | split: '|' -%}

      <div class="grid grid-cols-[200px_200px_1fr_1fr_1fr] lg:grid-cols-[250px_200px_1fr_1fr_1fr] gap-x-4 lg:gap-x-6">

        {% comment %} Image - spans all rows {% endcomment %}
        <div class="flex items-start justify-center pt-4" style="grid-row: 1 / -1; grid-column: 1;">
          {% if section.settings.left_image != blank %}
            <img
              src="{{ section.settings.left_image | image_url: width: 600 }}"
              alt="{{ section.settings.title | escape }}"
              class="w-full h-auto object-contain"
              loading="lazy"
              width="300"
              height="300"
            >
          {% else %}
            {{ 'product-1' | placeholder_svg_tag: 'w-full h-auto text-gray-300' }}
          {% endif %}
        </div>

        {% comment %} Empty cell for col 2 header {% endcomment %}
        <div style="grid-row: 1; grid-column: 2;"></div>

        {% comment %} Plan Headers - Col 3, 4, 5 {% endcomment %}
        {% for i in (0..2) %}
          <div class="plan-header text-center" style="grid-row: 1; grid-column: {{ i | plus: 3 }};">
            <span class="inline-block px-3 lg:px-4 py-1.5 rounded-full text-xs lg:text-sm font-semibold font-sans
              {% if i == 0 %}bg-green-100 text-green-700
              {% elsif i == 1 %}bg-gray-100 text-gray-700
              {% else %}bg-purple-100 text-purple-700{% endif %}">
              {{ plan_titles[i] | default: 'Plan' }}
            </span>
          </div>
        {% endfor %}

        {% comment %} Feature Rows {% endcomment %}
        {% for block in section.blocks %}
          {%- assign row_number = forloop.index | plus: 1 -%}
          {%- assign is_last = forloop.last -%}

          {% comment %} Feature name - Col 2 {% endcomment %}
          <div class="flex items-center py-3" style="grid-row: {{ row_number }}; grid-column: 2;">
            <span class="text-sm lg:text-base font-medium font-sans text-gray-900">{{ block.settings.c2 }}</span>
          </div>

          {% comment %} Plan 1 value - Col 3 {% endcomment %}
          <div class="{% if is_last %}plan-cell-last{% else %}plan-cell{% endif %} flex items-center justify-center text-center" style="grid-row: {{ row_number }}; grid-column: 3;">
            {% if block.settings.p1_check %}
              <svg class="w-5 h-5 lg:w-6 lg:h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
            {% elsif block.settings.c3 != blank %}
              <span class="text-xs lg:text-sm text-gray-900 font-bold font-sans">{{ block.settings.c3 }}</span>
            {% else %}
              <span class="text-gray-300 text-lg lg:text-xl">—</span>
            {% endif %}
          </div>

          {% comment %} Plan 2 value - Col 4 {% endcomment %}
          <div class="{% if is_last %}plan-cell-last{% else %}plan-cell{% endif %} flex items-center justify-center text-center" style="grid-row: {{ row_number }}; grid-column: 4;">
            {% if block.settings.p2_check %}
              <svg class="w-5 h-5 lg:w-6 lg:h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
            {% elsif block.settings.c4 != blank %}
              <span class="text-xs lg:text-sm text-gray-900 font-bold font-sans">{{ block.settings.c4 }}</span>
            {% else %}
              <span class="text-gray-300 text-lg lg:text-xl">—</span>
            {% endif %}
          </div>

          {% comment %} Plan 3 value - Col 5 {% endcomment %}
          <div class="{% if is_last %}plan-cell-last{% else %}plan-cell{% endif %} flex items-center justify-center text-center" style="grid-row: {{ row_number }}; grid-column: 5;">
            {% if block.settings.p3_check %}
              <svg class="w-5 h-5 lg:w-6 lg:h-6 text-purple-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
            {% elsif block.settings.c5 != blank %}
              <span class="text-xs lg:text-sm text-gray-900 font-bold font-sans">{{ block.settings.c5 }}</span>
            {% else %}
              <span class="text-gray-300 text-lg lg:text-xl">—</span>
            {% endif %}
          </div>

        {% endfor %}

      </div>

    </div>
  </div>
</div>

{% schema %}
{
  "name": "Pricing Comparison",
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Subscription Plan"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subheading",
      "default": "Unlock Xnote Intelligence's full AI capabilities with pro or unlimited plan"
    },
    {
      "type": "header",
      "content": "Product Image"
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Product image",
      "info": "Recommended: Square image, min 800x800px"
    },
    {
      "type": "header",
      "content": "Plan Names"
    },
    {
      "type": "text",
      "id": "plan_titles",
      "label": "Plan titles (3 plans, separate with |)",
      "default": "Start Plan|Pro Plan|Unlimited Plan"
    },
    {
      "type": "text",
      "id": "price_1",
      "label": "Plan 1 price/label (optional)"
    },
    {
      "type": "text",
      "id": "price_2",
      "label": "Plan 2 price/label (optional)"
    },
    {
      "type": "text",
      "id": "price_3",
      "label": "Plan 3 price/label (optional)"
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding (mobile)",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding (mobile)",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Top padding (desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding (desktop)",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Feature Row",
      "settings": [
        {
          "type": "text",
          "id": "c2",
          "label": "Feature name",
          "default": "Multimodal Input"
        },
        {
          "type": "checkbox",
          "id": "p1_check",
          "label": "Plan 1: Show checkmark",
          "default": true
        },
        {
          "type": "text",
          "id": "c3",
          "label": "Plan 1: Custom text (instead of checkmark)"
        },
        {
          "type": "checkbox",
          "id": "p2_check",
          "label": "Plan 2: Show checkmark",
          "default": true
        },
        {
          "type": "text",
          "id": "c4",
          "label": "Plan 2: Custom text (instead of checkmark)"
        },
        {
          "type": "checkbox",
          "id": "p3_check",
          "label": "Plan 3: Show checkmark",
          "default": true
        },
        {
          "type": "text",
          "id": "c5",
          "label": "Plan 3: Custom text (instead of checkmark)"
        }
      ]
    }
  ],
  "max_blocks": 30,
  "presets": [
    {
      "name": "Pricing Comparison",
      "blocks": [
        {
          "type": "row",
          "settings": {
            "c2": "Pricing",
            "p1_check": false,
            "c3": "Free",
            "p2_check": false,
            "c4": "$ 99.99/yr",
            "p3_check": false,
            "c5": "$ 299.99/yr"
          }
        },
        {
          "type": "row",
          "settings": {
            "c2": "Speaker Labels",
            "p1_check": true,
            "p2_check": true,
            "p3_check": true
          }
        },
        {
          "type": "row",
          "settings": {
            "c2": "Multimodal Input",
            "p1_check": true,
            "p2_check": true,
            "p3_check": true
          }
        }
      ]
    }
  ]
}
{% endschema %}
