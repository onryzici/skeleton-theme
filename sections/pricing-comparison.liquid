{% comment %}
  Pricing Comparison Section
  Compare subscription plans with features in a clean table layout
{% endcomment %}

<style>
  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  #shopify-section-{{ section.id }} .pricing-header {
    animation: fadeInUp 0.6s ease forwards;
    opacity: 0;
  }

  #shopify-section-{{ section.id }} .pricing-content {
    animation: fadeInUp 0.6s ease forwards 0.2s;
    opacity: 0;
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    #shopify-section-{{ section.id }} .pricing-header,
    #shopify-section-{{ section.id }} .pricing-content {
      animation: none !important;
      opacity: 1 !important;
    }
  }

  /* Section padding */
  #shopify-section-{{ section.id }} .pricing-section {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} .pricing-section {
      padding-top: {{ section.settings.padding_top_desktop }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px !important;
    }
  }
</style>

<section class="pricing-section bg-white">

  {% comment %} Section Header {% endcomment %}
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="pricing-header text-center mb-12 lg:mb-16">
      {% if section.settings.heading != blank %}
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-medium font-sans text-gray-900 mb-4 lg:mb-6">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="text-base sm:text-lg lg:text-xl text-gray-600 font-sans max-w-4xl mx-auto">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>
  </div>

  {% comment %} Pricing Comparison Content - Wider than container {% endcomment %}
  <div class="pricing-content max-w-[1800px] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="border border-gray-200 rounded-[2.5rem] p-8 lg:p-12">

      {% comment %} Collect plans and features {% endcomment %}
      {%- liquid
        assign plans = section.blocks | where: "type", "plan"
        assign features = section.blocks | where: "type", "feature"
      -%}

      <div class="grid grid-cols-1 xl:grid-cols-[280px_1fr] gap-8 lg:gap-12">

        {% comment %} Left Side - Product Image {% endcomment %}
        <div class="flex items-center justify-center lg:justify-start">
          {% if section.settings.product_image != blank %}
            <img
              src="{{ section.settings.product_image | image_url: width: 600 }}"
              alt="{{ section.settings.heading | escape }}"
              class="w-full max-w-[250px] lg:max-w-none h-auto object-contain"
              loading="lazy"
              width="300"
              height="300"
            >
          {% else %}
            {{ 'product-1' | placeholder_svg_tag: 'w-full max-w-[250px] lg:max-w-none h-auto text-gray-300' }}
          {% endif %}
        </div>

        {% comment %} Right Side - Plans Grid {% endcomment %}
        <div class="space-y-6">

          {% comment %} Plan Badges Row {% endcomment %}
          <div class="grid grid-cols-[180px_repeat(3,1fr)] gap-4">
            <div></div> {%comment%} Empty cell for feature names column {%endcomment%}
            {% for plan in plans %}
              <div class="text-center" {{ plan.shopify_attributes }}>
                <div class="inline-block px-6 py-2 rounded-full font-semibold font-sans text-sm lg:text-base
                  {% if plan.settings.badge_style == 'green' %}
                    bg-green-100 text-green-700
                  {% elsif plan.settings.badge_style == 'purple' %}
                    bg-purple-100 text-purple-700
                  {% else %}
                    bg-gray-100 text-gray-700
                  {% endif %}">
                  {{ plan.settings.plan_name }}
                </div>
              </div>
            {% endfor %}
          </div>

          {% comment %} Single bordered container for all 3 plan columns {% endcomment %}
          <div class="grid grid-cols-[180px_repeat(3,1fr)] gap-4">

            {%comment%} Feature Names Column {%endcomment%}
            <div class="space-y-6">
              {% for feature in features %}
                <div class="text-sm lg:text-base font-medium font-sans text-gray-900 min-h-[64px] flex items-center" {{ feature.shopify_attributes }}>
                  {{ feature.settings.feature_name }}
                </div>
              {% endfor %}
            </div>

            {%comment%} Plan 1 Column - Single bordered box {%endcomment%}
            <div class="border border-gray-200 rounded-3xl p-6">
              <div class="space-y-6">
                {% for feature in features %}
                  <div class="text-center min-h-[64px] flex items-center justify-center">
                    {% if feature.settings.plan1_value == 'check' %}
                      <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                    {% elsif feature.settings.plan1_value == 'none' %}
                      <span class="text-gray-300 text-xl">—</span>
                    {% else %}
                      <span class="text-sm lg:text-base text-gray-900 font-bold font-sans leading-snug">{{ feature.settings.plan1_value }}</span>
                    {% endif %}
                  </div>
                {% endfor %}
              </div>
            </div>

            {%comment%} Plan 2 Column - Single bordered box {%endcomment%}
            <div class="border border-gray-200 rounded-3xl p-6">
              <div class="space-y-6">
                {% for feature in features %}
                  <div class="text-center min-h-[64px] flex items-center justify-center">
                    {% if feature.settings.plan2_value == 'check' %}
                      <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                    {% elsif feature.settings.plan2_value == 'none' %}
                      <span class="text-gray-300 text-xl">—</span>
                    {% else %}
                      <span class="text-sm lg:text-base text-gray-900 font-bold font-sans leading-snug">{{ feature.settings.plan2_value }}</span>
                    {% endif %}
                  </div>
                {% endfor %}
              </div>
            </div>

            {%comment%} Plan 3 Column - Single bordered box {%endcomment%}
            <div class="border border-gray-200 rounded-3xl p-6">
              <div class="space-y-6">
                {% assign plan3 = plans[2] %}
                {% for feature in features %}
                  <div class="text-center min-h-[64px] flex items-center justify-center">
                    {% if feature.settings.plan3_value == 'check' %}
                      <svg class="w-6 h-6 {% if plan3.settings.badge_style == 'purple' %}text-purple-500{% else %}text-gray-400{% endif %}" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                    {% elsif feature.settings.plan3_value == 'none' %}
                      <span class="text-gray-300 text-xl">—</span>
                    {% else %}
                      <span class="text-sm lg:text-base text-gray-900 font-bold font-sans leading-snug">{{ feature.settings.plan3_value }}</span>
                    {% endif %}
                  </div>
                {% endfor %}
              </div>
            </div>

          </div>

        </div>

      </div>

    </div>
  </div>

</section>

{% schema %}
