{% comment %}
  Pricing Comparison Section
  Compare subscription plans with features in a clean table layout
{% endcomment %}

<style>
  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  #shopify-section-{{ section.id }} .pricing-header {
    animation: fadeInUp 0.6s ease forwards;
    opacity: 0;
  }

  #shopify-section-{{ section.id }} .pricing-content {
    animation: fadeInUp 0.6s ease forwards 0.2s;
    opacity: 0;
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    #shopify-section-{{ section.id }} .pricing-header,
    #shopify-section-{{ section.id }} .pricing-content {
      animation: none !important;
      opacity: 1 !important;
    }
  }

  /* Section padding */
  #shopify-section-{{ section.id }} .pricing-section {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media (min-width: 1024px) {
    #shopify-section-{{ section.id }} .pricing-section {
      padding-top: {{ section.settings.padding_top_desktop }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px !important;
    }
  }

  /* Ensure all rows align perfectly */
  #shopify-section-{{ section.id }} .feature-row,
  #shopify-section-{{ section.id }} .value-row {
    min-height: 100px;
    display: flex;
    align-items: center;
  }
</style>

<div class="pricing-section full-width bg-white">

  {% comment %} Section Header {% endcomment %}
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="pricing-header text-center mb-12 lg:mb-16">
      {% if section.settings.heading != blank %}
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-medium font-sans text-gray-900 mb-4 lg:mb-6">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="text-base sm:text-lg lg:text-xl text-gray-600 font-sans max-w-4xl mx-auto">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>
  </div>

  {% comment %} Pricing Comparison Content {% endcomment %}
  <div class="pricing-content max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="border-2 border-gray-900 rounded-[2.5rem] p-8 lg:p-12">

      {% comment %} Collect feature rows {% endcomment %}
      {%- assign rows = section.blocks | where: "type", "row" -%}

      <div class="flex gap-8 lg:gap-12 items-start">

        {% comment %} Left Side - Product Image {% endcomment %}
        <div class="flex-shrink-0 w-[200px] lg:w-[250px] flex items-center justify-center">
          {% if section.settings.product_image != blank %}
            <img
              src="{{ section.settings.product_image | image_url: width: 600 }}"
              alt="{{ section.settings.heading | escape }}"
              class="w-full h-auto object-contain"
              loading="lazy"
              width="300"
              height="300"
            >
          {% else %}
            {{ 'product-1' | placeholder_svg_tag: 'w-full h-auto text-gray-300' }}
          {% endif %}
        </div>

        {% comment %} Middle - Feature Names {% endcomment %}
        <div class="flex-shrink-0 w-[180px] lg:w-[200px]">
          {% for row in rows %}
            <div class="feature-row justify-start px-4">
              <span class="text-sm lg:text-base font-medium font-sans text-gray-900">
                {{ row.settings.feature_name }}
              </span>
            </div>
          {% endfor %}
        </div>

        {% comment %} Right Side - 3 Plan Columns {% endcomment %}
        <div class="flex-1 grid grid-cols-3 gap-4 lg:gap-6">

          {% comment %} Plan 1 Card {% endcomment %}
          <div class="border-2 border-gray-900 rounded-[2rem] p-4 lg:p-6">
            {% comment %} Plan Badge {% endcomment %}
            <div class="text-center mb-6">
              <div class="inline-block px-4 py-2 rounded-full font-semibold font-sans text-xs lg:text-sm bg-green-100 text-green-700">
                {{ section.settings.plan1_name }}
              </div>
            </div>

            {% comment %} Plan Values {% endcomment %}
            {% for row in rows %}
              <div class="value-row justify-center text-center">
                {% if row.settings.plan1_value == 'check' %}
                  <svg class="w-5 h-5 lg:w-6 lg:h-6 text-gray-400 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                {% elsif row.settings.plan1_value == 'none' %}
                  <span class="text-gray-300 text-lg lg:text-xl">—</span>
                {% else %}
                  <span class="text-xs lg:text-sm text-gray-900 font-bold font-sans leading-tight">{{ row.settings.plan1_value }}</span>
                {% endif %}
              </div>
            {% endfor %}
          </div>

          {% comment %} Plan 2 Card {% endcomment %}
          <div class="border-2 border-gray-900 rounded-[2rem] p-4 lg:p-6">
            {% comment %} Plan Badge {% endcomment %}
            <div class="text-center mb-6">
              <div class="inline-block px-4 py-2 rounded-full font-semibold font-sans text-xs lg:text-sm bg-gray-100 text-gray-700">
                {{ section.settings.plan2_name }}
              </div>
            </div>

            {% comment %} Plan Values {% endcomment %}
            {% for row in rows %}
              <div class="value-row justify-center text-center">
                {% if row.settings.plan2_value == 'check' %}
                  <svg class="w-5 h-5 lg:w-6 lg:h-6 text-gray-400 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                {% elsif row.settings.plan2_value == 'none' %}
                  <span class="text-gray-300 text-lg lg:text-xl">—</span>
                {% else %}
                  <span class="text-xs lg:text-sm text-gray-900 font-bold font-sans leading-tight">{{ row.settings.plan2_value }}</span>
                {% endif %}
              </div>
            {% endfor %}
          </div>

          {% comment %} Plan 3 Card {% endcomment %}
          <div class="border-2 border-gray-900 rounded-[2rem] p-4 lg:p-6">
            {% comment %} Plan Badge {% endcomment %}
            <div class="text-center mb-6">
              <div class="inline-block px-4 py-2 rounded-full font-semibold font-sans text-xs lg:text-sm bg-purple-100 text-purple-700">
                {{ section.settings.plan3_name }}
              </div>
            </div>

            {% comment %} Plan Values {% endcomment %}
            {% for row in rows %}
              <div class="value-row justify-center text-center">
                {% if row.settings.plan3_value == 'check' %}
                  <svg class="w-5 h-5 lg:w-6 lg:h-6 text-purple-500 mx-auto" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                {% elsif row.settings.plan3_value == 'none' %}
                  <span class="text-gray-300 text-lg lg:text-xl">—</span>
                {% else %}
                  <span class="text-xs lg:text-sm text-gray-900 font-bold font-sans leading-tight">{{ row.settings.plan3_value }}</span>
                {% endif %}
              </div>
            {% endfor %}
          </div>

        </div>

      </div>

    </div>
  </div>
</div>

{% schema %}
{
  "name": "Pricing Comparison",
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Subscription Plan"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Unlock Xnote Intelligence's full AI capabilities with pro or unlimited plan"
    },
    {
      "type": "header",
      "content": "Product Image"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product image",
      "info": "Recommended: Square image, min 800x800px"
    },
    {
      "type": "header",
      "content": "Plan Names"
    },
    {
      "type": "text",
      "id": "plan1_name",
      "label": "Plan 1 name",
      "default": "Start Plan"
    },
    {
      "type": "text",
      "id": "plan2_name",
      "label": "Plan 2 name",
      "default": "Pro Plan"
    },
    {
      "type": "text",
      "id": "plan3_name",
      "label": "Plan 3 name",
      "default": "Unlimited Plan"
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding (mobile)",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding (mobile)",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Top padding (desktop)",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding (desktop)",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Feature Row",
      "settings": [
        {
          "type": "text",
          "id": "feature_name",
          "label": "Feature name",
          "default": "Speaker Labels"
        },
        {
          "type": "text",
          "id": "plan1_value",
          "label": "Plan 1 value",
          "default": "check",
          "info": "Enter 'check' for checkmark, 'none' for dash, or custom text"
        },
        {
          "type": "text",
          "id": "plan2_value",
          "label": "Plan 2 value",
          "default": "check",
          "info": "Enter 'check' for checkmark, 'none' for dash, or custom text"
        },
        {
          "type": "text",
          "id": "plan3_value",
          "label": "Plan 3 value",
          "default": "check",
          "info": "Enter 'check' for checkmark, 'none' for dash, or custom text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Pricing Comparison",
      "blocks": [
        {
          "type": "row",
          "settings": {
            "feature_name": "Pricing",
            "plan1_value": "Free",
            "plan2_value": "$ 99.99/yr",
            "plan3_value": "$ 299.99/yr"
          }
        },
        {
          "type": "row",
          "settings": {
            "feature_name": "Speaker Labels",
            "plan1_value": "check",
            "plan2_value": "check",
            "plan3_value": "check"
          }
        },
        {
          "type": "row",
          "settings": {
            "feature_name": "Multimodal Input",
            "plan1_value": "check",
            "plan2_value": "check",
            "plan3_value": "check"
          }
        }
      ]
    }
  ]
}
{% endschema %}
